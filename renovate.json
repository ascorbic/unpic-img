{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeLinters",
    ":automergePatch",
    ":automergeTesters",
    ":automergeTypes",
    ":disableRateLimiting",
    ":widenPeerDependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "schedule": [
    "before 4am"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "unpic"
      ],
      "rangeStrategy": "bump",
      "bumpVersion": "patch",
      "extends": [
        ":automergePatch"
      ],
      "schedule": [
        "at any time"
      ]
    },
    {
      "matchPackageNames": [
        "typescript"
      ],
      "matchFiles": [
        "packages/angular/package.json",
        "examples/angular/package.json"
      ],
      "rangeStrategy": "pin"
    }
  ]
}