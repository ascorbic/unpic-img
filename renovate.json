{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>unjs/renovate-config"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "unpic"
      ],
      "rangeStrategy": "bump",
      "bumpVersion": "patch",
      "extends": [
        ":automergePatch"
      ],
      "schedule": [
        "at any time"
      ]
    },
    {
      "matchPackageNames": [
        "typescript"
      ],
      "matchFiles": [
        "packages/angular/package.json",
        "examples/angular/package.json"
      ],
      "rangeStrategy": "pin"
    }
  ]
}