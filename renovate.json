{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeLinters"
  ],
  "schedule": [
    "after 9pm on sunday"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "unpic"
      ],
      "rangeStrategy": "bump",
      "bumpVersion": "patch",
      "extends": [
        ":automergePatch"
      ],
      "schedule": [
        "at any time"
      ]
    },
    {
      "matchPackageNames": [
        "typescript"
      ],
      "matchPaths": [
        "packages/angular",
        "examples/angular"
      ],
      "rangeStrategy": "pin"
    }
  ]
}