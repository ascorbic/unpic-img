{
  "name": "@unpic/react",
  "version": "0.1.8",
  "license": "MIT",
  "description": "React component for responsive, high-performance images",
  "keywords": [
    "images",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ascorbic/unpic-img",
    "directory": "packages/react"
  },
  "homepage": "https://unpic.pics/img/react",
  "files": [
    "dist",
    "nextjs.d.ts",
    "next-legacy.d.ts",
    "next.d.ts"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./next": {
      "require": {
        "types": "./dist/next.d.ts",
        "default": "./dist/next.js"
      },
      "import": {
        "types": "./dist/next.d.mts",
        "default": "./dist/next.mjs"
      }
    },
    "./next-legacy": {
      "require": {
        "types": "./dist/next-legacy.d.ts",
        "default": "./dist/next-legacy.js"
      },
      "import": {
        "types": "./dist/next-legacy.d.mts",
        "default": "./dist/next-legacy.mjs"
      }
    },
    "./nextjs": {
      "require": {
        "types": "./dist/nextjs.d.ts",
        "default": "./dist/nextjs.js"
      },
      "import": {
        "types": "./dist/nextjs.d.mts",
        "default": "./dist/nextjs.mjs"
      }
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts src/next.tsx src/nextjs.tsx src/next-legacy.tsx --format cjs,esm --dts --clean",
    "prepublishOnly": "pnpm build && pnpm publint && pnpm typelint",
    "publint": "publint",
    "typelint": "attw --pack .",
    "test": "vitest run"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.13.6",
    "@testing-library/react": "^14.2.0",
    "@types/node": "^20.11.11",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "cssstyle": "^3.0.0",
    "jsdom": "^22.1.0",
    "next": "^14.1.0",
    "publint": "^0.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "@unpic/core": "workspace:^"
  },
  "peerDependencies": {
    "next": ">=14",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  }
}