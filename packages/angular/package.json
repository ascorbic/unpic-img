{
  "name": "@unpic/angular",
  "version": "1.0.0",
  "description": "A high-performance, responsive image module and directive for Angular",
  "keywords": [
    "angular",
    "images"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build && publint",
    "watch": "ng build --watch --configuration development"
  },
  "files": [
    "dist"
  ],
  "module": "dist/fesm2022/unpic-angular.mjs",
  "typings": "dist/index.d.ts",
  "exports": {
    "./package.json": {
      "default": "./package.json"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/fesm2022/unpic-angular.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ascorbic/unpic-img",
    "directory": "packages/angular"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.2",
    "@angular/cli": "~19.1.2",
    "@angular/compiler-cli": "^19.1.1",
    "@angular/core": "^19.1.1",
    "ng-packagr": "^19.1.0",
    "publint": "^0.3.2",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "@unpic/core": "workspace:^",
    "tslib": "^2.8.1"
  }
}