<style>
  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    grid-gap: 1rem;
    margin-top: 1rem;
  }

  .intro {
    text-align: left;
    margin-bottom: 2rem;
  }

  .intro h2 {
    font-size: 3rem;
  }

  .body {
    font-size: 1.5rem;
    line-height: 1.5rem;
  }

  @media (min-width: 768px) {
    .intro {
      margin: 1.5rem;
    }
  }

  .cards h2 {
    font-size: 1.5rem;
  }

  .card .body {
    font-size: 1.5rem;
    line-height: 1.5rem;
  }

  .cards > a {
    padding: 1.5rem;
    border-radius: 0.5rem;
    /* border: 1px solid var(--theme-divider); */
    text-decoration: none;
    color: inherit;
  }

  .cards p {
    color: inherit;
    font-size: 1.1rem;
  }

  .cards > a:hover,
  .card:hover {
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    text-decoration: none;
  }
</style>
